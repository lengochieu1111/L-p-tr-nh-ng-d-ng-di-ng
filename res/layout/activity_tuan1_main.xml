<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#2B2B2B"
    tools:context=".Tuan1.Tuan1_MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/edt_One"
        android:textSize="60dp"
        android:gravity="right"
        android:hint="0"
        android:textColor="#AAA"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:cursorVisible="false"
        android:imeOptions="flagNoExtractUi"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:id="@+id/edt_Two"
        android:textSize="60dp"
        android:gravity="right"
        android:hint="0"
        android:textColor="#AAA"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:cursorVisible="false"
        android:imeOptions="flagNoExtractUi"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="AC"
                android:id="@+id/btn_AC"
                android:textSize="25dp"
                android:background="@drawable/button_result"
                android:onClick="OnClick_AC"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="+/-"
                android:textSize="25dp"
                android:background="@drawable/button_click_color"
                android:backgroundTint="#DDDADA"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:textSize="25dp"
                android:background="@drawable/button_click_color"
                android:backgroundTint="#DDDADA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn_Seven"
                android:text="7"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Seven"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="8"
                android:id="@+id/btn_Eight"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Eight"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/btn_Nine"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Nine"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:id="@+id/btn_Four"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Four"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="5"
                android:id="@+id/btn_Five"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Five"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/btn_Six"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Six"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:id="@+id/btn_One"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_One"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="2"
                android:id="@+id/btn_Two"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Two"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:id="@+id/btn_Three"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Three"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/btn_Zero"
                android:textSize="25dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Zero"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="."
                android:id="@+id/btn_Dot"
                android:textSize="30dp"
                android:background="@drawable/button_shape"
                android:onClick="OnClick_Dot"/>
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btn_Result"
                android:text="="
                android:textSize="25dp"
                android:background="@drawable/button_result"
                android:onClick="OnClick_Result"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>