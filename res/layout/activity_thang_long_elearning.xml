<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".ThangLongElearning.ThangLongElearning">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/msv"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTxt_username"
            android:layout_marginTop="3dp"
            android:hint="Username"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pw"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eTxt_password"
            android:layout_marginTop="4dp"
            android:hint="Password"
            android:textStyle="italic"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tView_forgotten"
        android:onClick="OnClick_Forgotten"
        android:textSize="12dp"
        android:text="Forgotten your username or password?"
        android:textColor="#7C7C7C"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Login"
        android:backgroundTint="#E91E63"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Log in using your account on:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!--Google-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/login_gg"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tView_google"
                android:onClick="OnClick_Google"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Google"
                android:textColor="#7C7C7C"
                android:textStyle="bold" />
        </LinearLayout>

        <!--Microsoft-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:backgroundTint="#FFFFFF"
                android:src="@drawable/login_mcs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tView_microsoft"
                android:onClick="OnClick_Microsoft"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="Microsoft"
                android:textColor="#7C7C7C"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>